{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["src/*"],
      "server/*": ["src/server/*"],
    },
    "resolveJsonModule": true,
    "lib": ["dom"],
    "skipLibCheck": true
  },
  "include": ["src", "package.json"],
}
